
@{
    ViewBag.Title = "EmpDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{ 
    string gender;
    if (ViewBag.Gender == "M")
    {
        gender = "Male";
    }
    else
    { 
        gender = "Female"; 
    }


}
<div class="container-fluid">
    <table class="table w-25 m-auto">
        <tr>
            <td>Empployee ID</td>
            <td>@ViewBag.EmpID</td>
        </tr>
        <tr>
            <td>Name</td>
            <td>@ViewBag.Name</td>
        </tr>
        <tr>
            <td>Salary</td>
            <td>@ViewBag.Salary</td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>@gender</td>
        </tr>
        <tr>
            <td colspan="2">
                @if (ViewBag.Salary > 2000)
                {
                    <span class="text-success">Good work!</span>
                }
                else
                {
                    <span class="text-danger">You have to work harder!</span>
                }
            </td>
        </tr>
        <tr>
            <td>Year</td>
            <td>
                <ul>
                    @for (int i = ViewBag.Year; i <= DateTime.Now.Year; i++)
                    {
                        <li>@i</li>
                    }
                </ul>

            </td>
        </tr>
        <tr>
            <td>Position</td>
            <td>
                <ul>
                    @foreach (var item in ViewBag.Position)
                    {
                        <li>@item</li>
                    }
                </ul>

            </td>
        </tr>
    </table>
</div>

